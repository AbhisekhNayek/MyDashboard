# Server port your backend listens on
PORT=5000

# Frontend application URL (used in emails and redirects)
FRONTEND_URL=http://localhost:3000

# MongoDB connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT expiration time (e.g., '7d' for 7 days)
JWT_EXPIRE=7d

# Secret key used to sign JWT tokens (keep this secret!)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Cookie expiration time in days
COOKIE_EXPIRE=7

# SMTP (email) service provider name (e.g., Gmail)
SMTP_SERVICE=Gmail

# Email address used to send emails
SMTP_MAIL=youremail@example.com

# Password or app-specific password for SMTP_MAIL
SMTP_PASSWORD=your_smtp_password_here

# SMTP server hostname (optional if using service)
SMTP_HOST=smtp.gmail.com

# SMTP port (usually 587 for TLS or 465 for SSL)
SMTP_PORT=587

# Twilio Account SID for sending SMS/calls
TWILIO_SID=your_twilio_sid_here

# Twilio phone number registered in your Twilio account
TWILIO_PHONE_NUMBER=+1234567890

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
